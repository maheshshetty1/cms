<h1>comments</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>id</th>
            <th>owner</th>
            <th>body</th>
            <th>Status</th>
            <th>date</th>
        </tr>
    </thead>
    <tbody>
        {{#each comments}} 
        <tr>
            <td>{{_id}}</td>
            <td>{{user.firstName}}</td>
            <td>{{body}}</td>
            <td><input data-id="{{_id}}" type="checkbox" name="approveComment" {{#if approveComment}} checked {{/if}} id="approveComment"></td>
            <td>{{dateModifier date 'MMM Do YYYY'}}</td>
            <td><form action="/admin/comments/{{_id}}?_method=DELETE" method="POST" enctype="multipart/form-data">
                <button class="btn btn-danger">Delete</button>
            </form></td>
        </tr>
        {{/each}}
    </tbody>
</table>